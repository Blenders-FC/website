---
// RepositoryList.astro
const repositories = [
  {
    name: 'Main Repository',
    description: 'Core application codebase and documentation',
    stars: 245,
    language: 'TypeScript',
    url: 'https://github.com/yourusername/main-repo'
  },
  {
    name: 'UI Components',
    description: 'Reusable component library with modern design system',
    stars: 189,
    language: 'React',
    url: 'https://github.com/yourusername/ui-components'
  },
  {
    name: 'API Gateway',
    description: 'Service gateway and request handling layer',
    stars: 156,
    language: 'Node.js',
    url: 'https://github.com/yourusername/api-gateway'
  },
  {
    name: 'Documentation',
    description: 'Technical documentation and guides',
    stars: 92,
    language: 'Markdown',
    url: 'https://github.com/yourusername/docs'
  }
];
---

<div class="repository-container">
  <ul class="repository-list">
    {repositories.map((repo) => (
      <li class="repository-item">
        <div class="repository-content">
          <div class="repository-main">
            <a href={repo.url} class="repository-name">{repo.name}</a>
            <p class="repository-description">{repo.description}</p>
          </div>
          <div class="repository-meta">
            <span class="language-badge">{repo.language}</span>
            <div class="stars">
              <span class="star-icon">â˜…</span>
              {repo.stars}
            </div>
          </div>
        </div>
      </li>
    ))}
  </ul>
</div>

<style>
  .repository-container {
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
  }

  #subtitle {
    color: white;
    text-align: left;
    margin: 0 0 1.5rem 0;
    font-size: 1.5rem;
    font-weight: 600;
  }

  .repository-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .repository-item {
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.05);
    transition: all 0.2s ease;
  }

  .repository-item:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-1px);
  }

  .repository-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
  }

  .repository-main {
    flex: 1;
  }

  .repository-name {
    color: #58a6ff;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    display: inline-block;
    margin-bottom: 0.5rem;
  }

  .repository-name:hover {
    text-decoration: underline;
  }

  .repository-description {
    color: #8b949e;
    margin: 0;
    font-size: 0.9rem;
  }

  .repository-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.9rem;
  }

  .language-badge {
    background: rgba(255, 255, 255, 0.1);
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    color: #8b949e;
  }

  .stars {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    color: #8b949e;
  }

  .star-icon {
    color: #e3b341;
  }

  @media (max-width: 640px) {
    .repository-content {
      flex-direction: column;
    }

    .repository-meta {
      margin-top: 0.5rem;
    }
  }
</style>